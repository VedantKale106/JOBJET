<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF24292E"
    tools:context=".StudentInfo">


    <TextView
        android:id="@+id/student_age"
        android:layout_width="329dp"
        android:layout_height="44dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/timesbd"
        android:textColor="#CBF3F8"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textviewage"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <TextView
        android:id="@+id/textViewlocation"
        android:layout_width="77dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/timesbd"
        android:text="Location -"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <TextView
        android:id="@+id/student_location"
        android:layout_width="315dp"
        android:layout_height="41dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/timesbd"
        android:textColor="#CBF3F8"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewlocation"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <TextView
        android:id="@+id/textViewrate"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/timesbd"
        android:text=" Rate -"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textViewdescription"
        android:layout_width="92dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/timesbd"
        android:text="Description -"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <TextView
        android:id="@+id/textViewskills"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/timesbd"
        android:text=" Skills -"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textviewage"
        android:layout_width="68dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/timesbd"
        android:text=" Age -"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <TextView
        android:id="@+id/student_description"
        android:layout_width="302dp"
        android:layout_height="41dp"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/timesbd"
        android:textColor="#CBF3F8"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewdescription"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <TextView
        android:id="@+id/student_rate"
        android:layout_width="329dp"
        android:layout_height="44dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/timesbd"
        android:textColor="#CBF3F8"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewrate"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <TextView
        android:id="@+id/student_skills"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/timesbd"
        android:gravity="fill_horizontal"
        android:textColor="#CBF3F8"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewskills"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="18dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/student_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/student_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/student_name"
        android:layout_width="397dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/timesbd"
        android:gravity="center_horizontal"
        android:text="pratsufdfui sfwifbueif - iewfoioiwue"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/contact"
        android:layout_width="143dp"
        android:layout_height="47dp"
        android:fontFamily="@font/timesbd"
        android:textSize="20sp"
        android:text="Contact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_description"
        app:layout_constraintVertical_bias="0.625" />


</androidx.constraintlayout.widget.ConstraintLayout>